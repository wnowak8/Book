@page
@model WebApplication1.Pages.Account.LoginModel
@{
}


<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row"  style=" margin-bottom: 10px;">
            <div class="col-3">
                <label asp-for="Credential.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>